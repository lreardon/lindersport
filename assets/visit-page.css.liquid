/* Add this at the top of your visit-page.css.liquid file */
@font-face {
  font-family: 'P22Underground';
  src: url('{{ "P22Underground.woff2" | asset_url }}') format('woff2'),
       url('{{ "P22Underground.woff" | asset_url }}') format('woff');
  font-weight: normal;
  font-style: normal;
}

/* If you have different weights/styles, add more @font-face declarations */
@font-face {
  font-family: 'P22Underground';
  src: url('{{ "P22Underground-DemiBold.woff2" | asset_url }}') format('woff2'),
       url('{{ "P22Underground-DemiBold" | asset_url }}') format('woff');
  font-weight: bold;
  font-style: normal;
}

.full-screen-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-image: url('{{ 'store.jpg' | asset_url }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.centered-page-content-in-white {
  position: relative;
  background: white;
  overflow: hidden;
  margin-right: max(20vw, 20px);
  margin-left: max(20vw, 20px);
  margin-top: 50px;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 40px;
  padding-right: 40px;
  text-align: justify;
  text-align-last: center;
  line-height: 1.3;
  font-family: 'P22Underground', sans-serif;
  letter-spacing: 0.02em;
}

.content-container {
  position: fixed;
  top: var(--header-bottom-position);
  width: 100%;
  height: calc(100vh - var(--header-bottom-position));
  overflow: hidden;
}


/* Hide header/footer for this page */
body.template-page header,
body.template-page footer {
  display: none;
}