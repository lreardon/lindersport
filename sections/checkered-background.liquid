<style>
  html {
    background:
    repeating-conic-gradient({{ section.settings.color_secondary }} 0 90deg, {{ section.settings.color_primary }} 0 180deg) 0 60px / calc(100dvw - calc(100dvw - 100%)) 100dvw;
  }

  @media (min-width: 990px) {
    html {
      background:
      repeating-conic-gradient({{ section.settings.color_secondary }} 0 90deg, {{ section.settings.color_primary }} 0 180deg) 0 60px / calc(50dvw - calc(50dvw - 50%)) 50dvw;
    }
  }
</style>

{% schema %}
{
  "name": "Checkered Background",
  "settings": [
    {
      "type": "color",
      "id": "color_primary",
      "label": "Primary",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "color_secondary",
      "label": "Secondary",
      "default": "#F6F6F6"
    }
  ],
  "presets": [
    {
      "name": "Checkered Background",
      "settings": {}
    }
  ]
}
{% endschema %}
