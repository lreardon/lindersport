{%-
  liquid
  for link in menu.links
    render 'header-link', url: link.url, title: link.title

    for child_link in link.links
      render 'header-link', url: child_link.url, title: child_link.title

      for grandchild_link in child_link.links
        render 'header-link', url: grandchild_link.url, title: grandchild_link.title
      endfor
    endfor
  endfor
-%}
