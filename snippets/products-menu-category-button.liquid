{%-
  liquid

  assign mod_url = url
  assign first_char = url | split: '' | first

  if first_char == '#' and request.page_type != 'index'
    assign mod_url = routes.root_url | append: url
  endif
-%}

<li>
  <h3 class="products__menu__category__button" onclick="showSection('{{-title-}}')">{{- title -}}</h3><!-- /.header__link -->
</li>
{% comment %} <li>
  <a href="{{- mod_url -}}" class="header__link">{{- title -}}</a><!-- /.header__link -->
</li> {% endcomment %}
